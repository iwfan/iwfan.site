---
import type { HTMLAttributes } from "astro/types"

type Props = HTMLAttributes<"time"> & {
  date: Date
}

const { date, ...attrs } = Astro.props
---

<time datetime={date.toISOString()} {...attrs}>
  {
    date.toLocaleDateString("en-us", {
      year: "numeric",
      month: "long",
      day: "numeric",
    })
  }
</time>

<style>
  time {
    display: block;
  }
</style>
