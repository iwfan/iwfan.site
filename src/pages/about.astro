---
import { getEntry } from "astro:content"
import Layout from "../layouts/Layout.astro"

const entry = await getEntry("docs", "about")
const { Content } = await entry.render()
---

<Layout title="About" desc="Things about me and this site." classes={["container mx-auto xl:max-w-screen-xl px-4"]}>
  <article class="prose prose-invert w-full max-w-screen-md flex-none mx-auto">
    <h1 class="font-bold font-jost text-xl py-6 md:text-2xl lg:text-3xl my-4">About</h1>
    <Content />
  </article>
</Layout>
